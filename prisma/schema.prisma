generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model HousingCache {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  cookies   Int
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId  String   @unique
}

model PlayerStats {
  id                 String     @id @default(uuid())
  createdAt          DateTime   @default(now())
  playerStats        Bytes
  experience         Int
  questParticipation Int
  skyblockExperience Int
  housingCookies     Int
  playerId           String
  guildStatsId       String
  GuildStats         GuildStats @relation(fields: [guildStatsId], references: [id], onDelete: Cascade)
  player             Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([createdAt, playerId, guildStatsId])
}

model Player {
  id            String        @id @default(uuid())
  uuid          String        @unique
  username      String
  prefix        String
  joined        DateTime
  initialJoined DateTime
  PlayerStats   PlayerStats[]
  HousingCache  HousingCache?
}

model GuildStats {
  id                   String        @id @default(uuid())
  createdAt            DateTime      @default(now())
  experience           Int
  experienceByGameType Bytes
  guildId              String
  rawDataHash          String
  guild                Guild         @relation(fields: [guildId], references: [id], onDelete: Cascade)
  members              PlayerStats[]

  @@unique([createdAt, guildId])
}

model Guild {
  id               String       @id @default(uuid())
  guildIdDiscord   String       @unique
  channelIdDiscord String       @unique
  guildIdHypixel   String       @unique
  name             String
  createdAtHypixel DateTime
  GuildStats       GuildStats[]
}
